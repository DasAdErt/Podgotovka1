<Window x:Class="Podgotovka1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Podgotovka1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Text="Клининговая компания" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <Grid Background="#99FF99" Panel.ZIndex="-2"></Grid>
        <Grid Grid.Row="2" Background="#FFA6DBFD"></Grid>
        <Frame Grid.Row="1" Name="MainFrame" NavigationUIVisibility="Hidden"></Frame>
        <Button Content="Назад" Name="ButtonBack" Background="#FFFFE050" Width="100" HorizontalAlignment="Right" Height="30" Margin="0,0,15,0"/>
        <Image Source="/resources/icon-cleaning.png" HorizontalAlignment="Left" Width="75" Height="75" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
